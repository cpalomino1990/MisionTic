@page
@model ProyectoCiclo3.App.Frontend.Pages.EditRutaModel
@{
    var ruta = Model.Ruta;
}

  
<div class="text-center">
  <form method="POST">
    <label for="Id" class="form-label">Id:</label>
    <input type="text" class="form-control" id="Id" name="Id" placeholder="Id"asp-for="@ruta.Id">
    <label for="Oringen" class="form-label"> de origen:</label>
    <input type="text" class="form-control" id="Origen" name="Origen" placeholder="Origen" asp-for="@ruta.Origen">
    <label for="Destino" class="form-label">Aeropuesto de destino:</label>
    <input type="text" class="form-control" id="Destino" name="Destino" placeholder="Destino" asp-for="@ruta.Destino">
    <label for="TiempoEstimado" class="form-label">Tiempo del vuelo Estimado:</label>
    <input type="number" class="form-control" id="TiempoEstimado" name="TiempoEstimado" placeholder="TiempoEstimado" asp-for="@ruta.Tiempo_Estimado">

    <hr>
   
    <button type="submit" class="btn btn-success">Enviar</button> <a href="javascript:history.back()"><button class="btn btn-primary hBack" type="button">Atras</button></a>
  </form>
</div>
